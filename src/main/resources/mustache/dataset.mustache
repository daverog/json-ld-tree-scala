PREFIX provenance:<http://www.bbc.co.uk/ontologies/provenance/>
PREFIX rdfs:<http://www.w3.org/2000/01/rdf-schema#>

CONSTRUCT {
  ?thing a ?type ;
    rdfs:label ?label ;
    provenance:canonicalLocation ?location ;
    provenance:changeReason ?change ;
    provenance:provided ?provided ;
    provenance:provider ?provider ;
    provenance:version ?version .
}
WHERE {
  FILTER(?thing = <{{datasetUri}}>) .
  ?thing a ?type .
  ?thing rdfs:label ?label .
  ?thing provenance:canonicalLocation ?location .
  ?thing provenance:changeReason ?change .
  ?thing provenance:version ?version .
  OPTIONAL {
    ?thing provenance:provider ?provider . 
  }
  OPTIONAL {
    ?thing provenance:provided ?provided .
  }
}
